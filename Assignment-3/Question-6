public class employee 
{ 
  int empId; 
  String empName; 
  int deptNo; 
  double salary; 
  public employee(int empId, String empName, int deptNo, double salary) 
  {
    this.empId = empId; 
    this.empName = empName; 
    this.deptNo = deptNo; 
    this.salary = salary; 
  } 
  public void display()  
  { 
    System.out.println("Employee ID   : " + empId); 
    System.out.println("Employee Name : " + empName); 
    System.out.println("Department No : " + deptNo); 
    System.out.println("Salary        : " + salary); 
  } 
  public static void main ( String [] args)  
  { 
    if (args.length != 4)  
    { 
      System.out.println("Enter the employee id , name , department no , salary "); 
      return; 
    } 
    try  
    { 
      int empId = Integer.parseInt(args[0]); 
      String empName = args[1]; 
      int deptNo = Integer.parseInt(args[2]); 
      double salary = Double.parseDouble(args[3]);
      employee emp = new employee(empId, empName, deptNo, salary); 
      emp.display(); 
    }  
    catch (NumberFormatException e)  
    { 
      System.out.println("Enter a valid number"); 
    } 
  } 
}


// Command line : java employee 101 John 10 55000
